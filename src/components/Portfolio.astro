  <style>
    html {
      scroll-behavior: smooth;
    }
    #background {
      will-change: background-position;
    }
  </style>

  <script>
    const img = document.getElementById("background");
    const header = document.getElementById("header");
    const max_frames = 100;
    let max_scroll = document.documentElement.scrollHeight - window.innerHeight;

    window.addEventListener("resize", () => {
      max_scroll = document.documentElement.scrollHeight - window.innerHeight;
    });

    window.addEventListener("scroll", () => {
      requestAnimationFrame(() => {
        const scroll_position = window.scrollY;
        const scroll_fraction = scroll_position / max_scroll;

        const frame = Math.floor(scroll_fraction * max_frames) || 1;

        const id = frame.toString().padStart(3, "0");
        img.src = `/frames/ezgif-frame-${id}.webp`;

        if (scroll_position !== 0) {
          header.classList.add("backdrop-blur-md");
        } else {
          header.classList.remove("backdrop-blur-md");
        }
      });
    });
  </script>
